<p style="color: green"><%= notice %></p>

<h1 style="color: #600"><center>Wall of Tweets - RoR Edition</center></h1>
<br>


<div id="tweets">
  <% @tweets.each do |tweet| %>
    <%= render tweet %>
    <%= button_to 'Like this tweet', like_tweet_path(tweet), method: :put %>
    <p>
      <%= link_to "Show this tweet", tweet %>
      <hr> </hr>
    </p>
  <% end %>
</div>

<%= link_to "New tweet", new_tweet_path %>
